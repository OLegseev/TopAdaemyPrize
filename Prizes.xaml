        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="1" Margin="0,171,0,0" Height="14" ><Run Text="Количество п"/><Run Text="о"/><Run Text="зиций"/></TextBlock>
