        <Border CornerRadius="20" HorizontalAlignment="Center" VerticalAlignment="Top" BorderThickness="2" Background="#d91842" BorderBrush="black"  Height="268" Width="267" Grid.Column="1" Margin="0,60,0,0"/>

        <ComboBox materialDesign:HintAssist.Hint="Выберите приз" x:Name="Com" HorizontalAlignment="Center"  Width="110" Grid.Column="1" Margin="0,133,0,0" VerticalAlignment="Top" Height="23"/>
